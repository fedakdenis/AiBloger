    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch AiBloger.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/AiBloger.Api/bin/Debug/net8.0/AiBloger.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/AiBloger.Api",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7001;http://localhost:5001"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            }
        },
        {
            "name": "Update Database",
            "type": "coreclr",
            "request": "launch",
            "program": "dotnet",
            "args": [
                "ef",
                "database",
                "update",
                "--project",
                "AiBloger.Infrastructure",
                "--startup-project",
                "AiBloger.Api"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        }
    ]
}
